<div class="main">
  <div class="inner">

    <div class="form">
      <h2 class="user-heading">ユーザー ログイン</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="form_content">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: :form_area, rows: "1", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form_content">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, class: :form_area, rows: "1", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>

  </div>
</div>